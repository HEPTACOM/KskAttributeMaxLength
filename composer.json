{
    "name": "heptacom/shopware-ksk-attribute-max-length",
    "license": "MIT",
    "description": "Shopware plugin to limit the character lengths in attribute fields",
    "type": "shopware-plugin",
    "keywords": [
        "ecommerce",
        "shopware"
    ],
    "authors": [
        {
            "name": "HEPTACOM GmbH",
            "role": "Manufacturer"
        },
        {
            "name": "Julian Krzefski",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">= 7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "kubawerlos/php-cs-fixer-custom-fixers": "^1.17"
    },
    "extra": {
        "installer-name": "KskAttributeMaxLength"
    },
    "scripts": {
        "php-lint": [
            "php-cs-fixer fix --allow-risky=yes --dry-run"
        ],
        "php-lint-fix": [
            "php-cs-fixer fix --allow-risky=yes"
        ]
    }
}
